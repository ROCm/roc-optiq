{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Base settings for Windows Visual Studio builds of ROCm Optiq.",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "Configure ROCm Optiq for Windows (64-bit) with Visual Studio, enabling detailed debugging symbols and checks.",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "/W4 /EHsc",
                "JSON_SUPPORT": "ON",
                "COMPUTE_UI_SUPPORT": "ON",
                "ROCPROFVIS_DEVELOPER_MODE": "ON"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "Configure ROCm Optiq for Windows (64-bit) with Visual Studio, optimized for speed and efficiency.",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "/EHsc"
            }
        },
        {
            "name": "x64-release-symbols",
            "displayName": "x64 Release with Symbols",
            "description": "Configure ROCm Optiq for Windows (64-bit) with Visual Studio, optimized for speed and efficiency with symbols.",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },        
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "description": "Configure ROCm Optiq for Windows (32-bit) with Visual Studio, enabling detailed debugging symbols and checks.",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "description": "Configure ROCm Optiq for Windows (32-bit) with Visual Studio, optimized for speed and efficiency.",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "description": "Base settings for Linux GCC builds of ROCm Optiq",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_INSTALL_PREFIX": "/opt/roc-optiq"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "ROCm Optiq debug",
            "description": "Configure ROCm Optiq for Linux with GCC, enabling detailed debugging symbols and checks.",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-release",
            "displayName": "ROCm Optiq release",
            "description": "Configure ROCm Optiq for Linux with GCC, optimized for speed and efficiency in production.",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
                {
            "name": "linux-release-symbols",
            "displayName": "ROCm Optiq release",
            "description": "Configure ROCm Optiq for Linux with GCC, optimized for speed and efficiency with symbols.",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Linux Release Build",
            "description": "",
            "displayName": "",
            "configurePreset": "linux-release"
        },
                {
            "name": "Linux Release Build with Symbols",
            "description": "",
            "displayName": "",
            "configurePreset": "linux-release-symbols"
        },
        {
            "name": "Linux Debug Build",
            "description": "",
            "displayName": "",
            "configurePreset": "linux-debug"
        },
        {
            "name": "Windows Debug Build",
            "description": "",
            "displayName": "",
            "configurePreset": "x64-debug",
            "configuration": "Debug" 
        },
        {
            "name": "Windows Release Build",
            "description": "",
            "displayName": "",
            "configurePreset": "x64-release",
            "configuration": "Release" 
        },
        {
            "name": "Windows Release Build with Symbols",
            "description": "",
            "displayName": "",
            "configurePreset": "x64-release-symbols",
            "configuration": "RelWithDebInfo"
        }
    ]
}